---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/hero/Hero.astro';
import AchievementPrograms from '../components/achievements/AchievementPrograms.astro';
import CertificationGrid from '../components/certifications/CertificationGrid.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('hero.title')} showSidebar={true}>
  <div class="space-y-8">
    <!-- Hero Section - Pure Astro, no JS hydration needed -->
    <Hero lang={lang} />

    <!-- Achievement Programs - Pure Astro, no JS needed -->
    <AchievementPrograms lang={lang} />

    <!-- Certifications Grid - Pure Astro with vanilla JS filtering -->
    <CertificationGrid lang={lang} />
  </div>
</Layout>
