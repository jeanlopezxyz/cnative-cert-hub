---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/hero/Hero';
import AchievementPrograms from '../components/achievements/AchievementPrograms';
import CertificationGrid from '../components/certifications/CertificationGrid';
import InstantNavigation from '../components/ui/InstantNavigation';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('hero.title')} showSidebar={true}>
  <div class="space-y-8">
    <!-- Hero Section - Above fold, load immediately -->
    <Hero client:load lang={lang} />

    <!-- Achievement Programs - Below fold, load when visible -->
    <AchievementPrograms client:visible lang={lang} />

    <!-- Certifications Grid - Below fold, load when visible -->
    <CertificationGrid client:visible lang={lang} />
  </div>

  <InstantNavigation client:idle />
</Layout>
