---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const upcomingCertifications = [
  {
    id: 'ckne',
    acronym: 'CKNE',
    titleKey: 'certifications.upcoming.ckne',
    descKey: 'certifications.upcoming.ckneDesc',
    status: 'development',
    expectedDate: '2026',
    officialUrl: 'https://www.cncf.io/training/certification/',
    announcementUrl: 'https://www.cncf.io/announcements/2025/11/11/cncf-launches-cnpe-certification-to-define-enterprise-scale-platform-engineering-globally/',
    highlights: [
      'certifications.upcoming.ckneHighlight1',
      'certifications.upcoming.ckneHighlight2',
      'certifications.upcoming.ckneHighlight3',
    ],
  },
];
---

<Layout title={t('certifications.upcoming.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-xl font-semibold text-neutral-900 dark:text-white mb-2">
        {t('certifications.upcoming.title')}
      </h1>
      <p class="text-base text-neutral-600 dark:text-neutral-300">
        {t('certifications.upcoming.subtitle')}
      </p>
    </div>

    <!-- Certifications List -->
    <div class="space-y-6">
      {upcomingCertifications.map((cert) => (
        <div class="rounded-xl border border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800/50 overflow-hidden">
          <div class="p-6">
            <!-- Header -->
            <div class="flex flex-wrap items-center gap-3 mb-4">
              <span class="text-xl font-bold text-primary-600 dark:text-primary-400">
                {cert.acronym}
              </span>
              <span class="px-2.5 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 text-sm font-medium rounded-md">
                {t('certifications.upcoming.statusDevelopment')}
              </span>
              <span class="px-2.5 py-1 bg-neutral-200 dark:bg-neutral-700 text-neutral-600 dark:text-neutral-300 text-sm font-medium rounded-md">
                {t('certifications.upcoming.expected')} {cert.expectedDate}
              </span>
            </div>

            <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-3">
              {t(cert.titleKey)}
            </h2>

            <p class="text-neutral-600 dark:text-neutral-300 leading-relaxed mb-6">
              {t(cert.descKey)}
            </p>

            <!-- Key Features -->
            <div class="mb-6">
              <h3 class="text-sm font-semibold text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-3">
                {t('certifications.upcoming.keyFeatures')}
              </h3>
              <ul class="space-y-2">
                {cert.highlights.map((highlight) => (
                  <li class="flex items-start gap-2 text-neutral-700 dark:text-neutral-200">
                    <span class="text-primary-600 dark:text-primary-400 mt-1">â€¢</span>
                    <span>{t(highlight)}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Links -->
            <div class="flex flex-wrap gap-3">
              <a
                href={cert.officialUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white text-sm font-medium rounded-lg transition-colors"
              >
                {t('certifications.upcoming.visitCncf')}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
              <a
                href={cert.announcementUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 border border-neutral-300 dark:border-neutral-600 text-neutral-700 dark:text-neutral-200 text-sm font-medium rounded-lg hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors"
              >
                {t('certifications.upcoming.announcement')}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Info Note -->
    <div class="mt-8 p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800/30">
      <p class="text-sm text-neutral-600 dark:text-neutral-400">
        {t('certifications.upcoming.stayUpdatedDesc')}
      </p>
    </div>
  </div>
</Layout>
