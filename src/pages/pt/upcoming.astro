---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const upcomingCertifications = [
  {
    id: 'ckne',
    acronym: 'CKNE',
    titleKey: 'certifications.upcoming.ckne',
    descKey: 'certifications.upcoming.ckneDesc',
    status: 'development',
    expectedDate: '2026',
    announcementUrl: 'https://training.linuxfoundation.org/kubernetes-network-engineer-program/',
    blogUrl: 'https://www.cncf.io/announcements/2025/11/11/cncf-launches-cnpe-certification-to-define-enterprise-scale-platform-engineering-globally/',
    color: 'violet',
    icon: 'network',
    highlights: [
      'certifications.upcoming.ckneHighlight1',
      'certifications.upcoming.ckneHighlight2',
      'certifications.upcoming.ckneHighlight3',
    ],
  },
  {
    id: 'code',
    acronym: 'CODE',
    titleKey: 'certifications.upcoming.code',
    descKey: 'certifications.upcoming.codeDesc',
    status: 'available',
    expectedDate: '2025',
    announcementUrl: 'https://training.linuxfoundation.org/certification/certified-open-source-developer-for-enterprise-code/',
    blogUrl: 'https://www.cncf.io/announcements/2025/04/01/cncf-launches-golden-kubestronaut-program-and-expands-cloud-native-education-initiatives/',
    color: 'emerald',
    icon: 'code',
    highlights: [
      'certifications.upcoming.codeHighlight1',
      'certifications.upcoming.codeHighlight2',
      'certifications.upcoming.codeHighlight3',
    ],
  },
];

const getStatusBadge = (status: string) => {
  if (status === 'available') {
    return {
      text: t('certifications.upcoming.statusAvailable'),
      classes: 'bg-emerald-100 dark:bg-emerald-600/30 text-emerald-600 dark:text-emerald-400',
    };
  }
  return {
    text: t('certifications.upcoming.statusDevelopment'),
    classes: 'bg-amber-100 dark:bg-amber-600/30 text-amber-600 dark:text-amber-400',
  };
};
---

<Layout title={t('certifications.upcoming.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Header -->
    <div class="mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold text-neutral-800 dark:text-neutral-100 mb-3">
        {t('certifications.upcoming.title')}
      </h1>
      <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-3xl">
        {t('certifications.upcoming.subtitle')}
      </p>
    </div>

    <!-- Certifications Grid -->
    <div class="space-y-8">
      {upcomingCertifications.map((cert) => {
        const statusBadge = getStatusBadge(cert.status);
        const colorClasses = cert.color === 'violet'
          ? {
              bg: 'bg-violet-50 dark:bg-violet-900/20',
              iconBg: 'bg-violet-600',
              title: 'text-violet-600 dark:text-violet-400',
              border: 'border-violet-200 dark:border-violet-800',
              link: 'text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300',
              bullet: 'text-violet-500',
            }
          : {
              bg: 'bg-emerald-50 dark:bg-emerald-900/20',
              iconBg: 'bg-emerald-600',
              title: 'text-emerald-600 dark:text-emerald-400',
              border: 'border-emerald-200 dark:border-emerald-800',
              link: 'text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300',
              bullet: 'text-emerald-500',
            };

        return (
          <div class={`${colorClasses.bg} rounded-2xl p-6 sm:p-8`}>
            <!-- Header -->
            <div class="flex flex-col sm:flex-row sm:items-start gap-5 mb-6">
              <div class={`w-16 h-16 flex-shrink-0 inline-flex items-center justify-center ${colorClasses.iconBg} text-white rounded-2xl`}>
                {cert.icon === 'network' ? (
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                  </svg>
                ) : (
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"></path>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                  <span class={`text-2xl font-bold ${colorClasses.title}`}>
                    {cert.acronym}
                  </span>
                  <span class={`px-3 py-1.5 ${statusBadge.classes} text-sm font-semibold rounded-lg`}>
                    {statusBadge.text}
                  </span>
                  {cert.status === 'development' && (
                    <span class="px-3 py-1.5 bg-neutral-100 dark:bg-neutral-700 text-neutral-600 dark:text-neutral-300 text-sm font-medium rounded-lg">
                      {t('certifications.upcoming.expected')} {cert.expectedDate}
                    </span>
                  )}
                </div>
                <h2 class={`text-xl sm:text-2xl font-bold ${colorClasses.title} mb-3`}>
                  {t(cert.titleKey)}
                </h2>
                <p class="text-base sm:text-lg text-neutral-600 dark:text-neutral-300 leading-relaxed">
                  {t(cert.descKey)}
                </p>
              </div>
            </div>

            <!-- Highlights -->
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-neutral-800 dark:text-neutral-200 mb-4">
                {t('certifications.upcoming.keyFeatures')}
              </h3>
              <ul class="space-y-3">
                {cert.highlights.map((highlight) => (
                  <li class="flex items-start gap-3">
                    <svg class={`w-5 h-5 ${colorClasses.bullet} flex-shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-base text-neutral-700 dark:text-neutral-300">
                      {t(highlight)}
                    </span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Links -->
            <div class="flex flex-wrap gap-4 pt-4 border-t border-neutral-200 dark:border-neutral-700">
              <a
                href={cert.announcementUrl}
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-flex items-center gap-2 text-base font-medium ${colorClasses.link} transition-colors`}
              >
                {t('certifications.upcoming.officialPage')}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
              <a
                href={cert.blogUrl}
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-flex items-center gap-2 text-base font-medium ${colorClasses.link} transition-colors`}
              >
                {t('certifications.upcoming.announcement')}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Additional Info -->
    <div class="mt-10 p-6 bg-neutral-50 dark:bg-neutral-800/50 rounded-xl">
      <h3 class="text-lg font-semibold text-neutral-800 dark:text-neutral-200 mb-3">
        {t('certifications.upcoming.stayUpdated')}
      </h3>
      <p class="text-base text-neutral-600 dark:text-neutral-400 mb-4">
        {t('certifications.upcoming.stayUpdatedDesc')}
      </p>
      <a
        href="https://www.cncf.io/training/certification/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-base font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
      >
        {t('certifications.upcoming.visitCncf')}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</Layout>
