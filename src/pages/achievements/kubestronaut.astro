---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { certifications } from '../../data/certifications';
import { APP_CONFIG } from '../../constants';
import { TYPOGRAPHY } from '../../config/app.config';
import AchievementCertificationGrid from '../../components/achievements/AchievementCertificationGrid';
import AchievementHero from '../../components/achievements/AchievementHero.astro';
import AchievementSteps from '../../components/achievements/AchievementSteps.astro';
import AchievementCTA from '../../components/achievements/AchievementCTA.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = `${APP_CONFIG.basePath}${lang === 'en' ? '' : '/' + lang}`;

const kubestronautCerts = ['kcna', 'kcsa', 'cka', 'ckad', 'cks'];

const steps = [
  {
    number: 1,
    title: t('achievements.kubestronaut.step1Title'),
    description: t('achievements.kubestronaut.step1Desc')
  },
  {
    number: 2,
    title: t('achievements.kubestronaut.step2Title'),
    description: t('achievements.kubestronaut.step2Desc')
  },
  {
    number: 3,
    title: t('achievements.kubestronaut.step3Title'),
    description: t('achievements.kubestronaut.step3Desc')
  }
];
---

<Layout title={t('achievements.kubestronaut.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Hero Section - Refactored Component -->
    <AchievementHero
      title={t('achievements.kubestronaut.title')}
      description={t('achievements.kubestronaut.description')}
      iconSrc={`${APP_CONFIG.basePath}/kubestronaut-icon.svg`}
      certCount={5}
      certCountLabel={t('certifications.card.certifications')}
      certRequiredLabel={t('certifications.card.required')}
      gradientClass="bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-600 dark:from-[#242145] dark:via-[#1A1735] dark:to-[#130F25]"
      particleStyle="cosmic"
    />

    <!-- Certification Path - WowDash Style -->
    <div class="mb-6 sm:mb-8">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 text-violet-600 dark:text-violet-400">
        {t('achievements.kubestronaut.requiredCerts')}
      </h2>

      <AchievementCertificationGrid
        certIds={kubestronautCerts}
        certifications={certifications}
        basePath={basePath}
        lang={lang}
        aria-label={t('achievements.kubestronaut.requiredCerts')}
        variant="kubestronaut"
        client:load
      />
    </div>

    <!-- Info Cards Grid - WowDash Style -->
    <div class="grid md:grid-cols-2 gap-4 sm:gap-6 mb-8">
      <!-- Requirements Card - WowDash cyan style -->
      <div class="card rounded-xl overflow-hidden border-0 bg-cyan-50 dark:bg-cyan-600/20">
        <div class="card-body p-5 sm:p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center bg-cyan-600 text-white rounded-xl">
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-cyan-600 dark:text-cyan-400">
              {t('achievements.kubestronaut.requirements')}
            </h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-3 p-3 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-6 h-6 flex-shrink-0 inline-flex items-center justify-center bg-cyan-600 text-white rounded-full mt-0.5">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.req1')}</span>
            </div>
            <div class="flex items-start gap-3 p-3 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-6 h-6 flex-shrink-0 inline-flex items-center justify-center bg-cyan-600 text-white rounded-full mt-0.5">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.req2')}</span>
            </div>
            <div class="flex items-start gap-3 p-3 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-6 h-6 flex-shrink-0 inline-flex items-center justify-center bg-cyan-600 text-white rounded-full mt-0.5">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.req3')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Benefits Card - WowDash amber style -->
      <div class="card rounded-xl overflow-hidden border-0 bg-amber-50 dark:bg-amber-600/20">
        <div class="card-body p-5 sm:p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center bg-amber-500 text-white rounded-xl">
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-amber-600 dark:text-amber-400">
              {t('achievements.kubestronaut.benefits')}
            </h3>
          </div>
          <div class="space-y-2">
            <div class="flex items-start gap-2.5 p-2.5 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-5 h-5 flex-shrink-0 inline-flex items-center justify-center bg-amber-500 text-white rounded-full mt-0.5">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.benefit1')}</span>
            </div>
            <div class="flex items-start gap-2.5 p-2.5 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-5 h-5 flex-shrink-0 inline-flex items-center justify-center bg-amber-500 text-white rounded-full mt-0.5">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.benefit2')}</span>
            </div>
            <div class="flex items-start gap-2.5 p-2.5 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-5 h-5 flex-shrink-0 inline-flex items-center justify-center bg-amber-500 text-white rounded-full mt-0.5">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.benefit3')}</span>
            </div>
            <div class="flex items-start gap-2.5 p-2.5 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-5 h-5 flex-shrink-0 inline-flex items-center justify-center bg-amber-500 text-white rounded-full mt-0.5">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.benefit4')}</span>
            </div>
            <div class="flex items-start gap-2.5 p-2.5 bg-white/60 dark:bg-neutral-800/40 rounded-lg">
              <div class="w-5 h-5 flex-shrink-0 inline-flex items-center justify-center bg-amber-500 text-white rounded-full mt-0.5">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <span class="text-neutral-700 dark:text-neutral-200 text-sm leading-relaxed">{t('achievements.kubestronaut.benefit5')}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- How to Get Started - Refactored Component -->
    <AchievementSteps
      title={t('achievements.kubestronaut.how')}
      steps={steps}
    />

    <!-- Call to Action - Refactored Component -->
    <AchievementCTA
      text={t('achievements.kubestronaut.ctaText')}
      buttonText={t('achievements.kubestronaut.ctaButton')}
      href={`${basePath}/certifications/${kubestronautCerts[0]}`}
    />
  </div>
</Layout>
