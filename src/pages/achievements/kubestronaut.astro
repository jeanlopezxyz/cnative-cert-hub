---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { certifications } from '../../data/certifications';
import { APP_CONFIG } from '../../constants';
import { TYPOGRAPHY } from '../../config/app.config';
import AchievementCertificationGrid from '../../components/achievements/AchievementCertificationGrid';
import AchievementHero from '../../components/achievements/AchievementHero.astro';
import AchievementSteps from '../../components/achievements/AchievementSteps.astro';
import AchievementCTA from '../../components/achievements/AchievementCTA.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = `${APP_CONFIG.basePath}${lang === 'en' ? '' : '/' + lang}`;

const kubestronautCerts = ['kcna', 'kcsa', 'cka', 'ckad', 'cks'];

const steps = [
  {
    number: 1,
    title: t('achievements.kubestronaut.step1Title'),
    description: t('achievements.kubestronaut.step1Desc')
  },
  {
    number: 2,
    title: t('achievements.kubestronaut.step2Title'),
    description: t('achievements.kubestronaut.step2Desc')
  },
  {
    number: 3,
    title: t('achievements.kubestronaut.step3Title'),
    description: t('achievements.kubestronaut.step3Desc')
  }
];
---

<Layout title={t('achievements.kubestronaut.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Hero Section - Refactored Component -->
    <AchievementHero
      title={t('achievements.kubestronaut.title')}
      description={t('achievements.kubestronaut.description')}
      iconSrc={`${APP_CONFIG.basePath}/kubestronaut-icon.svg`}
      certCount={5}
      certCountLabel={t('certifications.card.certifications')}
      certRequiredLabel={t('certifications.card.required')}
      gradientClass="bg-gradient-to-br from-blue-500 via-blue-600 to-blue-700 dark:from-blue-900 dark:via-blue-800 dark:to-blue-900"
      particleStyle="cosmic"
      ctaText={t('achievements.kubestronaut.heroCta')}
      ctaHref={`${basePath}/certifications/kcna`}
      secondaryCtaText={t('achievements.kubestronaut.heroCtaSecondary')}
      secondaryCtaHref="https://www.cncf.io/training/kubestronaut/"
    />

    <!-- Certification Path -->
    <div class="mb-6 sm:mb-8">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 text-neutral-800 dark:text-neutral-100">
        {t('achievements.kubestronaut.requiredCerts')}
      </h2>

      <AchievementCertificationGrid
        certIds={kubestronautCerts}
        certifications={certifications}
        basePath={basePath}
        lang={lang}
        aria-label={t('achievements.kubestronaut.requiredCerts')}
        variant="kubestronaut"
        client:visible
      />
    </div>

    <!-- Info Cards Grid - Clean Design -->
    <div class="grid md:grid-cols-2 gap-4 sm:gap-6 mb-8">
      <!-- Requirements Card -->
      <div class="card rounded-xl overflow-hidden bg-gradient-to-br from-blue-50 to-white dark:from-blue-950/30 dark:to-neutral-800/50">
        <div class="p-5 sm:p-6">
          <h3 class="text-lg font-bold text-blue-600 dark:text-blue-400 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {t('achievements.kubestronaut.requirements')}
          </h3>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.req1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-blue-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.req2')}</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Benefits Card -->
      <div class="card rounded-xl overflow-hidden bg-gradient-to-br from-amber-50 to-white dark:from-amber-950/30 dark:to-neutral-800/50">
        <div class="p-5 sm:p-6">
          <h3 class="text-lg font-bold text-amber-600 dark:text-amber-400 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
            {t('achievements.kubestronaut.benefits')}
          </h3>
          <ul class="space-y-2.5">
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.benefit1')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.benefit2')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.benefit3')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.benefit4')}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-500 mt-2 flex-shrink-0"></span>
              <span class="text-neutral-700 dark:text-neutral-300">{t('achievements.kubestronaut.benefit5')}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- How to Get Started - Refactored Component -->
    <AchievementSteps
      title={t('achievements.kubestronaut.how')}
      steps={steps}
    />

    <!-- Call to Action - Refactored Component -->
    <AchievementCTA
      text={t('achievements.kubestronaut.ctaText')}
      buttonText={t('achievements.kubestronaut.ctaButton')}
      href={`${basePath}/certifications/${kubestronautCerts[0]}`}
    />
  </div>
</Layout>
