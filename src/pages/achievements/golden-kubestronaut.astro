---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { certifications } from '../../data/certifications';
import { APP_CONFIG } from '../../constants';
import AchievementCertificationGrid from '../../components/achievements/AchievementCertificationGrid';
import AchievementHero from '../../components/achievements/AchievementHero.astro';
import AchievementSteps from '../../components/achievements/AchievementSteps.astro';
import AchievementCTA from '../../components/achievements/AchievementCTA.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = `${APP_CONFIG.basePath}${lang === 'en' ? '' : '/' + lang}`;

// All certifications for Golden Kubestronaut
const kubestronautCerts = ['kcna', 'kcsa', 'cka', 'ckad', 'cks'];
const additionalCerts = ['capa', 'cba', 'cca', 'cgoa', 'cnpa', 'ica', 'kca', 'otca', 'pca']; // Alphabetical order
const lfcs = certifications.find(c => c.id === 'lfcs');

const steps = [
  {
    number: 1,
    title: t('achievements.golden.howStep1Title'),
    description: t('achievements.golden.howStep1Desc')
  },
  {
    number: 2,
    title: t('achievements.golden.howStep2Title'),
    description: t('achievements.golden.howStep2Desc')
  },
  {
    number: 3,
    title: t('achievements.golden.howStep3Title'),
    description: t('achievements.golden.howStep3Desc')
  }
];
---

<Layout title={t('achievements.golden.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Hero Section - Refactored Component -->
    <AchievementHero
      title={t('achievements.golden.title')}
      description={t('achievements.golden.description')}
      iconSrc={`${APP_CONFIG.basePath}/golden-kubestronaut-icon.svg`}
      certCount={15}
      certCountLabel={t('certifications.card.certifications')}
      certRequiredLabel={t('certifications.card.required')}
      gradientClass="bg-gradient-to-br from-amber-400 via-yellow-500 to-orange-500 dark:from-[#D97706] dark:via-[#F59E0B] dark:to-[#EAB308]"
      particleStyle="golden"
    />

    <!-- Upcoming Change Notice -->
    <div class="card rounded-xl overflow-hidden border-0 bg-blue-50 dark:bg-blue-600/20 mb-6 sm:mb-8">
      <div class="card-body p-4 sm:p-5">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 sm:w-12 sm:h-12 flex-shrink-0 inline-flex items-center justify-center bg-blue-600 text-white rounded-xl">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-base sm:text-lg font-bold text-blue-600 dark:text-blue-400 mb-1">
              {t('achievements.golden.upcomingTitle')}
            </h3>
            <p class="text-neutral-600 dark:text-neutral-300 text-sm leading-relaxed">
              {t('achievements.golden.upcomingDesc')}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Certification Journey - WowDash Style -->
    <div class="mb-6 sm:mb-8">
      <h2 class="text-xl sm:text-2xl font-bold mb-4 text-amber-600 dark:text-amber-400">
        {t('achievements.golden.pathTitle')}
      </h2>

      <!-- Kubestronaut Certifications (Required Base) -->
      <div class="mb-6">
        <h3 class="text-base sm:text-lg font-semibold mb-3 flex items-center gap-2">
          <div class="w-6 h-6 inline-flex items-center justify-center bg-sky-600 text-white rounded-lg">
            <span class="text-xs font-bold">1</span>
          </div>
          <span class="text-sky-600 dark:text-sky-400">{t('achievements.golden.step1Title')}</span>
        </h3>
        <AchievementCertificationGrid
          certIds={kubestronautCerts}
          certifications={certifications}
          basePath={basePath}
          lang={lang}
          aria-label={t('achievements.golden.step1Title')}
          variant="kubestronaut"
          client:load
        />
      </div>

      <!-- Additional CNCF Certifications -->
      <div class="mb-6">
        <h3 class="text-base sm:text-lg font-semibold mb-3 flex items-center gap-2">
          <div class="w-6 h-6 inline-flex items-center justify-center bg-blue-600 text-white rounded-lg">
            <span class="text-xs font-bold">2</span>
          </div>
          <span class="text-blue-600 dark:text-blue-400">{t('achievements.golden.step2Title')}</span>
        </h3>
        <AchievementCertificationGrid
          certIds={additionalCerts}
          certifications={certifications}
          basePath={basePath}
          lang={lang}
          aria-label={t('achievements.golden.step2Title')}
          variant="cncf"
          client:load
        />
      </div>

      <!-- LFCS Certification - WowDash Style -->
      <div class="mb-6">
        <h3 class="text-base sm:text-lg font-semibold mb-3 flex items-center gap-2">
          <div class="w-6 h-6 inline-flex items-center justify-center bg-indigo-600 text-white rounded-lg">
            <span class="text-xs font-bold">3</span>
          </div>
          <span class="text-indigo-600 dark:text-indigo-400">{t('achievements.golden.step3Title')}</span>
        </h3>
        <div class="max-w-[200px]">
          <a href={`${basePath}/certifications/lfcs`} class="group block">
            {/* WowDash Card - purple for advanced */}
            <div class="card h-full rounded-xl overflow-hidden border-0 bg-purple-100 dark:bg-purple-600/25 text-center transition-all duration-300">
              <div class="card-body p-4 sm:p-5">
                {/* Icon */}
                <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto inline-flex items-center justify-center bg-purple-600 text-white mb-3 rounded-xl">
                  <svg class="w-5 h-5 sm:w-6 sm:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                  </svg>
                </div>

                {/* Acronym */}
                <h6 class="text-base sm:text-lg font-bold mb-1 text-purple-600 dark:text-purple-400">{lfcs?.acronym}</h6>

                {/* Name */}
                <p class="text-neutral-600 dark:text-neutral-300 text-xs mb-3 line-clamp-2 min-h-[32px]">
                  {lfcs?.name}
                </p>

                {/* Level */}
                <span class="text-xs px-2.5 py-1 rounded-md font-medium text-purple-600 dark:text-purple-400 bg-white/60 dark:bg-neutral-900/40">
                  {t(`certifications.level.${lfcs?.level}`)}
                </span>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>

    <!-- Info Cards Grid - WowDash Style -->
    <div class="grid md:grid-cols-2 gap-4 sm:gap-6 mb-8">
      <!-- Requirements Card - WowDash cyan style -->
      <div class="card rounded-xl overflow-hidden border-0 bg-cyan-50 dark:bg-cyan-600/20">
        <div class="card-body p-5 sm:p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center bg-cyan-600 text-white rounded-xl">
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-cyan-600 dark:text-cyan-400">
              {t('achievements.golden.requirements')}
            </h3>
          </div>
          <ul class="space-y-2">
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.req1')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.req2')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.req3')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.req4')}
            </li>
          </ul>
        </div>
      </div>

      <!-- Benefits Card - WowDash amber style -->
      <div class="card rounded-xl overflow-hidden border-0 bg-amber-50 dark:bg-amber-600/20">
        <div class="card-body p-5 sm:p-6">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center bg-amber-500 text-white rounded-xl">
              <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-amber-600 dark:text-amber-400">
              {t('achievements.golden.benefits')}
            </h3>
          </div>
          <ul class="space-y-2">
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit1')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit2')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit3')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit4')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit5')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit6')}
            </li>
            <li class="text-neutral-600 dark:text-neutral-300 text-sm leading-5 pl-1">
              • {t('achievements.golden.benefit7')}
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- How to Get Started - Refactored Component -->
    <AchievementSteps
      title={t('achievements.golden.how')}
      steps={steps}
    />

    <!-- Call to Action - Refactored Component -->
    <AchievementCTA
      text={t('achievements.golden.ctaText')}
      buttonText={t('achievements.golden.ctaButton')}
      href={`${basePath}/certifications/kcna`}
    />
  </div>
</Layout>
