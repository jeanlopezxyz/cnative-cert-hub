---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const upcomingCertifications = [
  {
    id: 'ckne',
    acronym: 'CKNE',
    titleKey: 'certifications.upcoming.ckne',
    descKey: 'certifications.upcoming.ckneDesc',
    status: 'development',
    expectedDate: '2026',
    announcementUrl: 'https://training.linuxfoundation.org/kubernetes-network-engineer-program/',
    blogUrl: 'https://www.cncf.io/announcements/2025/11/11/cncf-launches-cnpe-certification-to-define-enterprise-scale-platform-engineering-globally/',
    color: 'violet',
    icon: 'network',
    highlights: [
      'certifications.upcoming.ckneHighlight1',
      'certifications.upcoming.ckneHighlight2',
      'certifications.upcoming.ckneHighlight3',
    ],
  },
];

const getStatusBadge = (status: string) => {
  if (status === 'available') {
    return {
      text: t('certifications.upcoming.statusAvailable'),
      classes: 'bg-emerald-100 dark:bg-emerald-900/40 text-emerald-700 dark:text-emerald-300',
    };
  }
  return {
    text: t('certifications.upcoming.statusDevelopment'),
    classes: 'bg-amber-100 dark:bg-amber-900/40 text-amber-700 dark:text-amber-300',
  };
};
---

<Layout title={t('certifications.upcoming.title')} lang={lang} showSidebar={true}>
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-8 2xl:px-12 3xl:px-16 py-6 sm:py-8">
    <!-- Header Section - WowDash Style -->
    <div class="mb-6">
      <h1 class="text-xl font-semibold text-neutral-900 dark:text-white mb-1">
        {t('certifications.upcoming.title')}
      </h1>
      <p class="text-sm text-neutral-500 dark:text-neutral-400">
        {t('certifications.upcoming.subtitle')}
      </p>
    </div>

    <!-- Certifications Grid -->
    <div class="space-y-6">
      {upcomingCertifications.map((cert) => {
        const statusBadge = getStatusBadge(cert.status);
        const colorClasses = cert.color === 'violet'
          ? {
              bg: 'bg-violet-50 dark:bg-violet-600/20',
              iconBg: 'bg-violet-600',
              title: 'text-violet-600 dark:text-violet-400',
              link: 'text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300',
              bullet: 'bg-violet-500',
              buttonBg: 'bg-violet-600 hover:bg-violet-700',
            }
          : {
              bg: 'bg-emerald-50 dark:bg-emerald-600/20',
              iconBg: 'bg-emerald-600',
              title: 'text-emerald-600 dark:text-emerald-400',
              link: 'text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300',
              bullet: 'bg-emerald-500',
              buttonBg: 'bg-emerald-600 hover:bg-emerald-700',
            };

        return (
          <div class={`card rounded-xl overflow-hidden border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800/50 transition-all duration-300 hover:shadow-md ${colorClasses.bg}`}>
            <div class="p-4 sm:p-5">
              {/* Header Row */}
              <div class="flex items-start gap-3 mb-4">
                <div class={`w-10 h-10 flex-shrink-0 inline-flex items-center justify-center ${colorClasses.iconBg} text-white rounded-lg`}>
                  {cert.icon === 'network' ? (
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                    </svg>
                  ) : (
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"></path>
                    </svg>
                  )}
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex flex-wrap items-center gap-2">
                    <span class={`text-base font-bold ${colorClasses.title}`}>
                      {cert.acronym}
                    </span>
                    <span class={`px-2 py-0.5 ${statusBadge.classes} text-xs font-medium rounded-md`}>
                      {statusBadge.text}
                    </span>
                    {cert.status === 'development' && (
                      <span class="px-2 py-0.5 bg-neutral-100 dark:bg-neutral-700 text-neutral-500 dark:text-neutral-400 text-xs font-medium rounded-md">
                        {t('certifications.upcoming.expected')} {cert.expectedDate}
                      </span>
                    )}
                  </div>
                  <h2 class="text-sm font-medium text-neutral-700 dark:text-neutral-300 mt-0.5">
                    {t(cert.titleKey)}
                  </h2>
                </div>
              </div>

              {/* Description */}
              <p class="text-sm text-neutral-600 dark:text-neutral-300 leading-relaxed mb-4">
                {t(cert.descKey)}
              </p>

              {/* Key Features */}
              <div class="mb-4">
                <h3 class="text-xs font-semibold text-neutral-500 dark:text-neutral-400 uppercase tracking-wide mb-2">
                  {t('certifications.upcoming.keyFeatures')}
                </h3>
                <div class="space-y-1.5">
                  {cert.highlights.map((highlight) => (
                    <div class="flex items-start gap-2">
                      <div class={`w-1.5 h-1.5 ${colorClasses.bullet} rounded-full flex-shrink-0 mt-1.5`}></div>
                      <span class="text-sm text-neutral-600 dark:text-neutral-300">
                        {t(highlight)}
                      </span>
                    </div>
                  ))}
                </div>
              </div>

              {/* Links */}
              <div class="flex flex-wrap gap-2 pt-3 border-t border-neutral-200/60 dark:border-neutral-700/60">
                <a
                  href={cert.announcementUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`inline-flex items-center gap-1.5 px-3 py-1.5 ${colorClasses.buttonBg} text-white text-xs font-medium rounded-lg transition-colors`}
                >
                  {t('certifications.upcoming.officialPage')}
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
                <a
                  href={cert.blogUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`inline-flex items-center gap-1.5 text-xs font-medium ${colorClasses.link} transition-colors`}
                >
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                  {t('certifications.upcoming.announcement')}
                </a>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Stay Updated Card -->
    <div class="mt-6 card rounded-xl overflow-hidden border border-neutral-200 dark:border-neutral-700 bg-blue-50 dark:bg-blue-600/20">
      <div class="p-4 sm:p-5">
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 flex-shrink-0 inline-flex items-center justify-center bg-blue-600 text-white rounded-lg">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-sm font-semibold text-blue-600 dark:text-blue-400">
              {t('certifications.upcoming.stayUpdated')}
            </h3>
            <p class="text-sm text-neutral-600 dark:text-neutral-300 mt-1 mb-3">
              {t('certifications.upcoming.stayUpdatedDesc')}
            </p>
            <a
              href="https://www.cncf.io/training/certification/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded-lg transition-colors"
            >
              {t('certifications.upcoming.visitCncf')}
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
