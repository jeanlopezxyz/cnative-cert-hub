---
import { useTranslations } from '../../i18n/utils';
import type { Language } from '../../types';

interface Question {
  id: string;
  domain: string;
  question: string;
  options: string[];
  correctAnswer: number;
  explanation: string;
  difficulty: 'easy' | 'medium' | 'hard';
}

interface Props {
  questions: Question[];
  examDuration: number;
  certificationId: string;
  lang: Language;
}

const { questions, examDuration, certificationId, lang } = Astro.props;
const t = useTranslations(lang);

// Pre-compute all translation keys needed by JavaScript
const translations = {
  title: t('quiz.title'),
  subtitle: t('quiz.subtitle'),
  comingSoon: t('quiz.comingSoon'),
  questions: t('quiz.questions'),
  duration: t('quiz.duration'),
  passing: t('quiz.passing'),
  studyMode: t('quiz.studyMode'),
  studyModeDesc: t('quiz.studyModeDesc'),
  recommended: t('quiz.recommended'),
  examMode: t('quiz.examMode'),
  examModeDesc: t('quiz.examModeDesc'),
  quizComplete: t('quiz.quizComplete'),
  passed: t('quiz.passed'),
  failed: t('quiz.failed'),
  threshold: t('quiz.threshold'),
  correctCount: t('quiz.correctCount'),
  incorrectCount: t('quiz.incorrectCount'),
  timeUsed: t('quiz.timeUsed'),
  takeAnother: t('quiz.takeAnother'),
  shareResult: t('quiz.shareResult'),
  generating: t('quiz.generating'),
  downloadImage: t('quiz.downloadImage'),
  copyResult: t('quiz.copyResult'),
  copied: t('quiz.copied'),
  imageDownloaded: t('quiz.imageDownloaded'),
  question: t('quiz.question'),
  of: t('quiz.of'),
  finish: t('quiz.finish'),
  reset: t('quiz.reset'),
  progress: t('quiz.progress'),
  answered: t('quiz.answered'),
  correct: t('quiz.correct'),
  incorrect: t('quiz.incorrect'),
  explanation: t('quiz.explanation'),
  correctAnswer: t('quiz.correctAnswer'),
  previous: t('quiz.previous'),
  next: t('quiz.next'),
  finishQuiz: t('quiz.finishQuiz'),
};

// Serialize data for client-side JS
const quizData = JSON.stringify({
  questions,
  examDuration,
  certificationId,
  lang,
  translations,
});
---

<div
  class="quiz-simulator"
  data-quiz={quizData}
  data-cert-id={certificationId}
>
  {questions.length === 0 ? (
    <!-- No questions state -->
    <div class="rounded-xl border-2 border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 overflow-hidden">
      <div class="p-8 text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-blue-600 flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <h5 class="text-lg font-bold text-neutral-900 dark:text-white mb-2">
          {translations.title}
        </h5>
        <p class="text-neutral-600 dark:text-neutral-400 text-base">
          {translations.comingSoon}
        </p>
      </div>
    </div>
  ) : (
    <!-- Quiz container - will be controlled by JS -->
    <div class="quiz-container">
      <!-- Start Screen -->
      <div class="quiz-screen quiz-start" data-screen="start">
        <div class="rounded-xl border-2 border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 overflow-hidden">
          <div class="bg-blue-600 p-5 sm:p-6">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 sm:w-14 sm:h-14 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h5 class="font-bold text-lg text-white">{translations.title}</h5>
                <p class="text-blue-100 text-base">{translations.subtitle}</p>
              </div>
            </div>
          </div>

          <div class="p-4 sm:p-6">
            <div class="grid grid-cols-3 gap-2 sm:gap-4 mb-6">
              <div class="p-3 sm:p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl text-center border border-blue-100 dark:border-blue-800">
                <div class="w-9 h-9 sm:w-10 sm:h-10 mx-auto mb-2 bg-blue-600 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-xl sm:text-2xl font-bold text-blue-700 dark:text-blue-400">{questions.length}</div>
                <div class="text-sm sm:text-base font-medium text-blue-600 dark:text-blue-300">{translations.questions}</div>
              </div>
              <div class="p-3 sm:p-4 bg-amber-50 dark:bg-amber-900/20 rounded-xl text-center border border-amber-100 dark:border-amber-800">
                <div class="w-9 h-9 sm:w-10 sm:h-10 mx-auto mb-2 bg-amber-500 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="text-xl sm:text-2xl font-bold text-amber-700 dark:text-amber-400">{examDuration}m</div>
                <div class="text-sm sm:text-base font-medium text-amber-600 dark:text-amber-300">{translations.duration}</div>
              </div>
              <div class="p-3 sm:p-4 bg-green-50 dark:bg-green-900/20 rounded-xl text-center border border-green-100 dark:border-green-800">
                <div class="w-9 h-9 sm:w-10 sm:h-10 mx-auto mb-2 bg-green-600 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div class="text-xl sm:text-2xl font-bold text-green-700 dark:text-green-400">75%</div>
                <div class="text-sm sm:text-base font-medium text-green-600 dark:text-green-300">{translations.passing}</div>
              </div>
            </div>

            <div class="space-y-3">
              <button
                class="quiz-start-btn w-full p-4 rounded-xl border-2 border-green-200 dark:border-green-700 bg-green-50 dark:bg-green-900/20 hover:border-green-400 dark:hover:border-green-500 hover:bg-green-100 dark:hover:bg-green-900/30 transition-all"
                data-mode="study"
              >
                <div class="flex items-center gap-3 sm:gap-4">
                  <div class="w-11 h-11 sm:w-12 sm:h-12 bg-green-600 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                  </div>
                  <div class="flex-1 text-left min-w-0">
                    <div class="font-bold text-green-800 dark:text-green-300">{translations.studyMode}</div>
                    <div class="text-base text-green-700 dark:text-green-400 truncate">{translations.studyModeDesc}</div>
                  </div>
                  <div class="px-2 sm:px-3 py-1 bg-green-600 text-white text-xs sm:text-sm font-bold rounded-full flex-shrink-0">
                    {translations.recommended}
                  </div>
                </div>
              </button>

              <button
                class="quiz-start-btn w-full p-4 rounded-xl border-2 border-blue-200 dark:border-blue-700 bg-blue-50 dark:bg-blue-900/20 hover:border-blue-400 dark:hover:border-blue-500 hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-all"
                data-mode="exam"
              >
                <div class="flex items-center gap-3 sm:gap-4">
                  <div class="w-11 h-11 sm:w-12 sm:h-12 bg-blue-600 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="flex-1 text-left min-w-0">
                    <div class="font-bold text-blue-800 dark:text-blue-300">{translations.examMode}</div>
                    <div class="text-base text-blue-700 dark:text-blue-400 truncate">{translations.examModeDesc}</div>
                  </div>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Quiz Screen (will be populated by JS) -->
      <div class="quiz-screen quiz-active hidden" data-screen="quiz">
        <!-- Dynamically populated -->
      </div>

      <!-- Results Screen (will be populated by JS) -->
      <div class="quiz-screen quiz-results hidden" data-screen="results">
        <!-- Dynamically populated -->
      </div>
    </div>
  )}
</div>

<script>
  import { optimizedStorage } from '../../utils/storage';

  interface QuizQuestion {
    id: string;
    domain: string;
    question: string;
    options: string[];
    correctAnswer: number;
    explanation: string;
    difficulty: 'easy' | 'medium' | 'hard';
  }

  interface QuizState {
    isActive: boolean;
    mode: 'exam' | 'study' | null;
    currentQuestion: number;
    answers: (number | null)[];
    startTime: number | null;
    showResults: boolean;
  }

  interface QuizData {
    questions: QuizQuestion[];
    examDuration: number;
    certificationId: string;
    lang: string;
    translations: Record<string, string>;
  }

  class QuizSimulator {
    private container: HTMLElement;
    private data: QuizData;
    private state: QuizState;
    private html2canvasLoaded: boolean = false;

    constructor(container: HTMLElement) {
      this.container = container;
      this.data = JSON.parse(container.dataset.quiz || '{}');
      this.state = this.loadState();
      this.init();
    }

    private loadState(): QuizState {
      const saved = optimizedStorage.getItem(`simple-quiz-${this.data.certificationId}`);
      if (saved) {
        try {
          return JSON.parse(saved);
        } catch {
          // Invalid state, return default
        }
      }
      return {
        isActive: false,
        mode: null,
        currentQuestion: 0,
        answers: new Array(this.data.questions.length).fill(null),
        startTime: null,
        showResults: false,
      };
    }

    private saveState(): void {
      if (this.state.isActive || this.state.showResults) {
        optimizedStorage.setBatched(
          `simple-quiz-${this.data.certificationId}`,
          JSON.stringify(this.state)
        );
      }
    }

    private init(): void {
      // Restore state if quiz was in progress
      if (this.state.isActive) {
        this.showQuizScreen();
      } else if (this.state.showResults) {
        this.showResultsScreen();
      } else {
        this.showStartScreen();
      }

      this.bindEvents();
    }

    private bindEvents(): void {
      // Start buttons
      this.container.querySelectorAll('.quiz-start-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const mode = (e.currentTarget as HTMLElement).dataset.mode as 'exam' | 'study';
          this.startQuiz(mode);
        });
      });
    }

    private showScreen(screenName: string): void {
      this.container.querySelectorAll('.quiz-screen').forEach(screen => {
        screen.classList.add('hidden');
      });
      const target = this.container.querySelector(`[data-screen="${screenName}"]`);
      if (target) {
        target.classList.remove('hidden');
      }
    }

    private showStartScreen(): void {
      this.showScreen('start');
    }

    private startQuiz(mode: 'exam' | 'study'): void {
      this.state = {
        isActive: true,
        mode,
        currentQuestion: 0,
        answers: new Array(this.data.questions.length).fill(null),
        startTime: Date.now(),
        showResults: false,
      };
      this.saveState();
      this.showQuizScreen();
    }

    private showQuizScreen(): void {
      const screen = this.container.querySelector('[data-screen="quiz"]');
      if (!screen) return;

      screen.innerHTML = this.renderQuizContent();
      this.showScreen('quiz');
      this.bindQuizEvents();
    }

    private renderQuizContent(): string {
      const { translations: t } = this.data;
      const q = this.data.questions[this.state.currentQuestion];
      const isStudyMode = this.state.mode === 'study';
      const hasAnswered = this.state.answers[this.state.currentQuestion] !== null;
      const userAnswer = this.state.answers[this.state.currentQuestion];
      const isCorrect = hasAnswered && userAnswer === q.correctAnswer;
      const isLastQuestion = this.state.currentQuestion === this.data.questions.length - 1;
      const answeredCount = this.state.answers.filter(a => a !== null).length;
      const progress = Math.round(((this.state.currentQuestion + 1) / this.data.questions.length) * 100);

      return `
        <div class="w-full space-y-4">
          <!-- Header -->
          <div class="rounded-2xl border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 overflow-hidden shadow-sm">
            <div class="h-1.5 ${isStudyMode ? 'bg-green-600' : 'bg-blue-600'}"></div>
            <div class="p-4">
              <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-3">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 rounded-xl flex items-center justify-center font-bold text-white ${isStudyMode ? 'bg-green-600' : 'bg-blue-600'}">
                    ${this.state.currentQuestion + 1}
                  </div>
                  <div>
                    <h4 class="text-base font-bold text-neutral-900 dark:text-white">
                      ${t.question} ${this.state.currentQuestion + 1} ${t.of} ${this.data.questions.length}
                    </h4>
                    <div class="flex items-center gap-2 mt-0.5">
                      <span class="text-base font-medium px-2 py-0.5 rounded-full ${isStudyMode ? 'bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300' : 'bg-blue-100 dark:bg-blue-900/40 text-blue-700 dark:text-blue-300'}">
                        ${isStudyMode ? t.studyMode : t.examMode}
                      </span>
                      <span class="text-base text-neutral-600 dark:text-neutral-300">${q.domain}</span>
                    </div>
                  </div>
                </div>
                <div class="flex gap-2">
                  <button class="quiz-finish-btn px-3 py-2 bg-rose-100 dark:bg-rose-900/30 hover:bg-rose-200 dark:hover:bg-rose-900/50 text-rose-700 dark:text-rose-300 text-base font-semibold rounded-lg transition-colors">
                    ${t.finish}
                  </button>
                  <button class="quiz-reset-btn px-3 py-2 bg-neutral-100 dark:bg-neutral-700 hover:bg-neutral-200 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-300 text-base font-semibold rounded-lg transition-colors">
                    ${t.reset}
                  </button>
                </div>
              </div>
              <div class="mt-4">
                <div class="flex items-center justify-between text-base text-neutral-600 dark:text-neutral-300 mb-2">
                  <span>${t.progress}: ${progress}%</span>
                  <span>${answeredCount} ${t.answered}</span>
                </div>
                <div class="w-full bg-neutral-200 dark:bg-neutral-700 rounded-full h-2.5 overflow-hidden">
                  <div class="h-2.5 rounded-full transition-all duration-500 ${isStudyMode ? 'bg-green-600' : 'bg-blue-600'}" style="width: ${progress}%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Question Card -->
          <div class="rounded-2xl border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 overflow-hidden shadow-sm">
            <div class="p-5">
              <h5 class="text-base font-semibold text-neutral-900 dark:text-white mb-5 leading-relaxed">
                ${q.question}
              </h5>
              <div class="space-y-3">
                ${q.options.map((option, index) => this.renderOption(option, index, q, isStudyMode, hasAnswered, userAnswer)).join('')}
              </div>

              ${isStudyMode && hasAnswered ? this.renderExplanation(q, isCorrect, userAnswer) : ''}
            </div>
          </div>

          <!-- Navigation -->
          <div class="rounded-2xl border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 overflow-hidden shadow-sm">
            <div class="p-4">
              <div class="flex items-center justify-between gap-3">
                ${isStudyMode ? `
                  <button class="quiz-prev-btn px-4 py-3 bg-neutral-100 dark:bg-neutral-700 hover:bg-neutral-200 dark:hover:bg-neutral-600 disabled:opacity-40 disabled:cursor-not-allowed text-neutral-700 dark:text-neutral-200 font-semibold rounded-xl transition-colors inline-flex items-center gap-2" ${this.state.currentQuestion === 0 ? 'disabled' : ''}>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    <span class="hidden sm:inline">${t.previous}</span>
                  </button>
                ` : '<div></div>'}
                <span class="text-base font-medium text-neutral-600 dark:text-neutral-300">
                  ${this.state.currentQuestion + 1} / ${this.data.questions.length}
                </span>
                ${isLastQuestion ? `
                  <button class="quiz-complete-btn px-5 py-3 font-semibold rounded-xl transition-all inline-flex items-center gap-2 ${isStudyMode ? 'bg-green-600 hover:bg-green-700' : 'bg-blue-600 hover:bg-blue-700'} text-white">
                    <span>${t.finishQuiz}</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </button>
                ` : `
                  <button class="quiz-next-btn px-5 py-3 font-semibold rounded-xl transition-all disabled:opacity-40 disabled:cursor-not-allowed inline-flex items-center gap-2 ${isStudyMode ? 'bg-green-600 hover:bg-green-700' : 'bg-blue-600 hover:bg-blue-700'} text-white" ${this.state.mode === 'exam' && userAnswer === null ? 'disabled' : ''}>
                    <span class="hidden sm:inline">${t.next}</span>
                    <span class="sm:hidden">${t.next}</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>
                `}
              </div>
            </div>
          </div>
        </div>
      `;
    }

    private renderOption(option: string, index: number, q: QuizQuestion, isStudyMode: boolean, hasAnswered: boolean, userAnswer: number | null): string {
      const isSelected = userAnswer === index;
      const isCorrectOption = index === q.correctAnswer;
      const showFeedback = isStudyMode && hasAnswered;
      const letter = String.fromCharCode(65 + index);

      let optionClasses = '';
      let iconHtml = '';

      if (showFeedback) {
        if (isCorrectOption) {
          optionClasses = 'border-emerald-500 bg-emerald-50 dark:bg-emerald-900/30 ring-2 ring-emerald-500/20';
          iconHtml = `<div class="w-7 h-7 rounded-full bg-emerald-500 flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
            </svg>
          </div>`;
        } else if (isSelected && !isCorrectOption) {
          optionClasses = 'border-rose-500 bg-rose-50 dark:bg-rose-900/30 ring-2 ring-rose-500/20';
          iconHtml = `<div class="w-7 h-7 rounded-full bg-rose-500 flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>`;
        } else {
          optionClasses = 'border-neutral-200 dark:border-neutral-600 bg-neutral-50 dark:bg-neutral-700/50 opacity-60';
          iconHtml = `<div class="w-7 h-7 rounded-full bg-neutral-200 dark:bg-neutral-600 flex items-center justify-center">
            <span class="text-sm font-bold text-neutral-600 dark:text-neutral-300">${letter}</span>
          </div>`;
        }
      } else {
        if (isSelected) {
          optionClasses = 'border-primary-500 bg-primary-50 dark:bg-primary-900/30 ring-2 ring-primary-500/20';
          iconHtml = `<div class="w-7 h-7 rounded-full bg-primary-500 flex items-center justify-center">
            <span class="text-sm font-bold text-white">${letter}</span>
          </div>`;
        } else {
          optionClasses = 'border-neutral-200 dark:border-neutral-600 hover:border-primary-300 dark:hover:border-primary-500 bg-white dark:bg-neutral-800';
          iconHtml = `<div class="w-7 h-7 rounded-full border-2 border-neutral-300 dark:border-neutral-500 flex items-center justify-center group-hover:border-primary-400 transition-colors">
            <span class="text-sm font-bold text-neutral-600 dark:text-neutral-300 group-hover:text-primary-500 transition-colors">${letter}</span>
          </div>`;
        }
      }

      const textClasses = showFeedback
        ? isCorrectOption
          ? 'text-emerald-800 dark:text-emerald-200 font-medium'
          : isSelected
            ? 'text-rose-800 dark:text-rose-200'
            : 'text-neutral-600 dark:text-neutral-300'
        : 'text-neutral-700 dark:text-neutral-200';

      return `
        <button
          class="quiz-option w-full text-left p-4 rounded-xl border-2 transition-all duration-300 group ${optionClasses} ${showFeedback ? 'cursor-default' : 'cursor-pointer'}"
          data-index="${index}"
          ${showFeedback ? 'disabled' : ''}
        >
          <div class="flex items-start gap-3">
            ${iconHtml}
            <span class="text-base leading-relaxed ${textClasses}">${option}</span>
          </div>
        </button>
      `;
    }

    private renderExplanation(q: QuizQuestion, isCorrect: boolean, userAnswer: number | null): string {
      const { translations: t } = this.data;
      const letter = String.fromCharCode(65 + q.correctAnswer);

      return `
