    private async loadHtml2Canvas(): Promise<typeof import('html2canvas').default | null> {
      if (this.html2canvasLoaded) {
        return (window as any).html2canvas;
      }

      try {
        const module = await import('html2canvas');
        (window as any).html2canvas = module.default;
        this.html2canvasLoaded = true;
        return module.default;
      } catch {
        console.warn('Failed to load html2canvas');
        return null;
      }
    }

    private async generateResultImage(): Promise<Blob | null> {
      const html2canvas = await this.loadHtml2Canvas();
      if (!html2canvas) return null;

      const resultsCard = this.container.querySelector('.quiz-results-card');
      if (!resultsCard) return null;

      try {
        const canvas = await html2canvas(resultsCard as HTMLElement, {
          backgroundColor: '#ffffff',
          scale: 2,
          logging: false,
          useCORS: true,
        });

        return new Promise((resolve) => {
          canvas.toBlob((blob) => resolve(blob), 'image/png', 1.0);
        });
      } catch {
        return null;
      }
    }

