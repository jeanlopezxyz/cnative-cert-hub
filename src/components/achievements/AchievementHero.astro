---
interface Props {
  title: string;
  description: string;
  iconSrc?: string;
  certCount: number;
  certCountLabel: string;
  certRequiredLabel: string;
  gradientClass?: string;
  particleStyle?: 'cosmic' | 'golden';
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
}

const {
  title,
  description,
  certCount,
  certCountLabel,
  certRequiredLabel,
  particleStyle = 'cosmic',
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref
} = Astro.props;

// WowDash color scheme based on style
const getColors = () => {
  if (particleStyle === 'golden') {
    return {
      cardBg: 'bg-amber-50 dark:bg-amber-600/20',
      iconBg: 'bg-gradient-to-br from-amber-400 via-yellow-500 to-orange-500',
      titleColor: 'text-amber-600 dark:text-amber-400',
      descColor: 'text-neutral-600 dark:text-neutral-300',
      badgeBg: 'bg-amber-100 dark:bg-amber-900/40',
      badgeText: 'text-amber-700 dark:text-amber-300',
      countBg: 'bg-amber-600',
      countText: 'text-white'
    };
  }
  return {
    cardBg: 'bg-sky-50 dark:bg-sky-600/20',
    iconBg: 'bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-600',
    titleColor: 'text-sky-600 dark:text-sky-400',
    descColor: 'text-neutral-600 dark:text-neutral-300',
    badgeBg: 'bg-sky-100 dark:bg-sky-900/40',
    badgeText: 'text-sky-700 dark:text-sky-300',
    countBg: 'bg-sky-600',
    countText: 'text-white'
  };
};

const colors = getColors();
---

<!-- WowDash Style Hero Card -->
<div class={`card rounded-xl overflow-hidden border-0 ${colors.cardBg} mb-6 sm:mb-8`}>
  <div class="card-body p-5 sm:p-6 lg:p-8">
    <div class="flex flex-col sm:flex-row items-center sm:items-center justify-between gap-4 sm:gap-6">
      <!-- Content - Left side -->
      <div class="flex-1 text-center sm:text-left">
        <h1 class={`text-2xl sm:text-3xl lg:text-4xl font-bold ${colors.titleColor} mb-2`}>
          {title}
        </h1>
        <p class={`${colors.descColor} text-sm sm:text-base mb-4`}>
          {description}
        </p>

        <!-- CTA Buttons -->
        {(ctaText && ctaHref) && (
          <div class="flex flex-col sm:flex-row gap-3">
            <a
              href={ctaHref}
              class={`inline-flex items-center justify-center px-6 py-3 ${colors.countBg} text-white font-semibold rounded-xl transition-all duration-200 hover:opacity-90 hover:scale-105 shadow-lg`}
            >
              {ctaText}
            </a>
            {(secondaryCtaText && secondaryCtaHref) && (
              <a
                href={secondaryCtaHref}
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-flex items-center justify-center gap-2 px-6 py-3 ${colors.badgeBg} ${colors.badgeText} font-semibold rounded-xl transition-all duration-200 hover:opacity-80`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                {secondaryCtaText}
              </a>
            )}
          </div>
        )}
      </div>

      <!-- Certification count badge - Right side -->
      <div class={`${colors.countBg} ${colors.countText} px-5 py-4 rounded-xl flex flex-col items-center justify-center flex-shrink-0 min-w-[100px]`}>
        <span class="text-3xl sm:text-4xl font-bold">{certCount}</span>
        <div class="text-center">
          <div class="text-sm font-bold">{certCountLabel}</div>
          <div class="text-sm font-bold">{certRequiredLabel}</div>
        </div>
      </div>
    </div>
  </div>
</div>
