---
interface Props {
  text: string;
  buttonText: string;
  href: string;
}

const { text, buttonText, href } = Astro.props;
---

<!-- WowDash Style CTA -->
<div class="card rounded-xl overflow-hidden border-0 bg-primary-50 dark:bg-primary-600/20 mt-6 sm:mt-8">
  <div class="card-body p-5 sm:p-6 flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center bg-primary-600 text-white rounded-xl flex-shrink-0">
        <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <p class="text-neutral-600 dark:text-neutral-300 text-base sm:text-lg">{text}</p>
    </div>
    <a
      href={href}
      class="group inline-flex items-center gap-2 px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white text-base font-semibold rounded-xl transition-all duration-200 shadow-sm hover:shadow-md flex-shrink-0"
    >
      {buttonText}
      <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</div>
