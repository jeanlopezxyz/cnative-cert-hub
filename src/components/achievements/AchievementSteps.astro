---
interface Step {
  number: number;
  title: string;
  description: string;
}

interface Props {
  title: string;
  steps: Step[];
}

const { title, steps } = Astro.props;

const getStepColors = (number: number) => {
  switch (number) {
    case 1: return { bg: 'bg-sky-50 dark:bg-sky-600/20', icon: 'bg-sky-600', text: 'text-sky-600 dark:text-sky-400' };
    case 2: return { bg: 'bg-blue-50 dark:bg-blue-600/20', icon: 'bg-blue-600', text: 'text-blue-600 dark:text-blue-400' };
    case 3: return { bg: 'bg-indigo-50 dark:bg-indigo-600/20', icon: 'bg-indigo-600', text: 'text-indigo-600 dark:text-indigo-400' };
    default: return { bg: 'bg-sky-50 dark:bg-sky-600/20', icon: 'bg-sky-600', text: 'text-sky-600 dark:text-sky-400' };
  }
};
---

<!-- WowDash Style Steps -->
<div class="mb-6 sm:mb-8">
  <h3 class="text-lg sm:text-xl font-bold mb-4 text-emerald-600 dark:text-emerald-400">
    {title}
  </h3>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
    {steps.map((step) => {
      const colors = getStepColors(step.number);
      return (
        <div class={`card rounded-xl overflow-hidden border-0 ${colors.bg}`}>
          <div class="card-body p-5 sm:p-6">
            <div class="flex items-center gap-3 mb-3">
              <div class={`w-10 h-10 sm:w-12 sm:h-12 inline-flex items-center justify-center ${colors.icon} text-white rounded-xl`}>
                <span class="text-lg sm:text-xl font-bold">{step.number}</span>
              </div>
              <h4 class={`font-bold text-base sm:text-lg ${colors.text}`}>
                {step.title}
              </h4>
            </div>
            <p class="text-neutral-600 dark:text-neutral-300 text-sm leading-relaxed">
              {step.description}
            </p>
          </div>
        </div>
      );
    })}
  </div>
</div>
