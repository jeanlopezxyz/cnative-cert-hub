---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { getLevelColors } from '../../utils';
import type { Language, Certification } from '../../types';

interface Props {
  certIds: string[];
  certifications: Certification[];
  basePath: string;
  lang?: string;
  gridClass?: string;
  role?: string;
  'aria-label'?: string;
  variant?: 'kubestronaut' | 'cncf';
}

const {
  certIds,
  certifications,
  basePath,
  lang: propLang,
  gridClass = "grid-cols-2 sm:grid-cols-3 md:grid-cols-5",
  role = "list",
  'aria-label': ariaLabel,
  variant = 'kubestronaut'
} = Astro.props;

const lang = (propLang || getLangFromUrl(Astro.url)) as Language;
const t = useTranslations(lang);

const getGridClass = () => {
  if (variant === 'cncf') {
    return "grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5";
  }
  return gridClass;
};
---

<div
  class={`grid ${getGridClass()} gap-3 sm:gap-4`}
  role={role}
  aria-label={ariaLabel}
>
  {certIds.map((certId, index) => {
    const cert = certifications.find(c => c.id === certId);
    const colors = getLevelColors(cert?.level || 'intermediate');

    return (
      <a
        href={`${basePath}/certifications/${certId}`}
        class="group block"
        role="listitem"
        aria-posinset={index + 1}
        aria-setsize={certIds.length}
        aria-label={`${t('certifications.card.viewDetails')}: ${cert?.acronym ?? certId}`}
      >
        <div class={`card h-full rounded-xl overflow-hidden border-0 ${colors.bg} text-center transition-all duration-300`}>
          <div class="card-body p-4 sm:p-5 h-full flex flex-col">
            <div class={`w-10 h-10 sm:w-12 sm:h-12 mx-auto inline-flex items-center justify-center ${colors.icon} text-white mb-3 rounded-xl`}>
              <svg class="w-5 h-5 sm:w-6 sm:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
              </svg>
            </div>

            <h3 class={`text-base sm:text-lg font-bold mb-1 ${colors.text}`}>{cert?.acronym}</h3>

            <p class="text-neutral-600 dark:text-neutral-300 text-base mb-3">
              {cert?.name}
            </p>

            <div class="flex-1" />

            <span class={`text-sm px-3 py-1.5 rounded-lg font-medium whitespace-nowrap ${colors.text} bg-white/60 dark:bg-neutral-900/40`}>
              {t(`certifications.level.${cert?.level}`)}
            </span>
          </div>
        </div>
      </a>
    );
  })}
</div>
