        <div class="section-content grid transition-all duration-300 ease-in-out grid-rows-[0fr] opacity-0 pointer-events-none">
          <div class="overflow-hidden">
            <div class="pt-1.5 pl-3 lg:pl-4 space-y-1">
              {CERTIFICATION_CATEGORIES.map((category) => {
                const certs = certificationsByCategory[category.key] || [];
                if (certs.length === 0) return null;
                const hasActiveChild = certs.some(cert => isPathActive(`${basePath}/certifications/${cert.id}`));

                return (
                  <div class="sidebar-category mb-0.5" data-category={category.key}>
                    <button
