{
  "name": "cnative-cert-hub",
  "type": "module",
  "version": "1.0.0",
  "description": "Cloud Native Certification Resources Hub - A comprehensive platform for tracking cloud native certifications and study progress",
  "keywords": [
    "cloud-native",
    "kubernetes",
    "certification",
    "study-guide",
    "astro",
    "typescript"
  ],
  "author": "CNCertHub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeanlopezxyz/cnative-cert-hub.git"
  },
  "homepage": "https://cnativecerthub.xyz",
  "bugs": {
    "url": "https://github.com/jeanlopezxyz/cnative-cert-hub/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "npm run sync-i18n && astro build && node scripts/optimize-build.cjs",
    "preview": "astro preview",
    "clean": "rm -rf dist .astro",
    "sync-i18n": "node scripts/sync-i18n-pages.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,astro}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,astro}\"",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Tests will be added soon\" && exit 0",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "prepare-pr": "npm run validate && npm run build",
    "test:ci-local": "./scripts/test-ci-local.sh",
    "test:lighthouse": "./scripts/test-lighthouse-local.sh",
    "analyze:bundle": "npm run build && node scripts/analyze-bundle.js",
    "test:security": "vitest run src/utils/security.test.ts",
    "analyze:vitals": "node -e \"const monitor = require('./dist/_assets/webVitals.js').webVitalsMonitor; console.log('Web Vitals:', monitor?.getAverages?.() || 'No data');\""
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.16.6",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "postcss": "^8.4.24",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.57.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "tailwindcss": "^3.4.0"
  }
}
